{
  "name": "MyDramaListPlus",
  "version": "1.0",
  "description": "MyDramaList but better. This project is still in early development if you encounter any bugs or errors please open an issue at https://github.com/zvbt/MyDramalistPLUS",
  "action": {
    "default_icon": "icons/icon.png"
  },
  "homepage_url": "https://github.com/zvbt/MyDramalistPLUS",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://mydramalist.com/*"]
    }
  ],
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
