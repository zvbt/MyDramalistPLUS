{
  "name": "MyDramaListPlus",
  "version": "1.0",
  "author": "zvbt",
  "description": "MyDramaListPLUS. This project is still in early development if you encounter any bugs or errors please open an issue at https://github.com/zvbt/MyDramalistPLUS",
  "homepage_url": "https://github.com/zvbt/MyDramalistPLUS",
  "background": {
    "scripts": ["ads.js", "background.js"]
  },
  "content_scripts": [
    {
      "css": ["style.css"],
      "js": ["content.js"],
      "matches": ["https://*.mydramalist.com/*"]
    }
  ],
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": ["webRequest", "webRequestBlocking", "http://*/", "https://*/"]
}
